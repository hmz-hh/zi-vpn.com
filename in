#!/bin/bash

# الألوان
RED='\e[31m'
GREEN='\e[32m'
YELLOW='\e[33m'
BLUE='\e[34m'
CYAN='\e[36m'
MAGENTA='\e[35m'
WHITE='\e[97m'
NC='\e[0m' # بدون لون

# رسم العنوان
clear
echo -e "${MAGENTA}"
echo -e "☆ZIVPN☆"
echo -e "${NC}"
echo -e "${CYAN}ZiVPN MANAGER – v1.5 for @lstunnels${NC}"
echo -e "by: ${MAGENTA}@deviYke${NC}, ${MAGENTA}@Kwadeous${NC} & ${MAGENTA}@voltsshx${NC}"
echo -e "${YELLOW}=========================================${NC}"
echo -e "|| ${GREEN}ACCOUNT MANAGEMENT PANEL ${NC}<\\/>"
echo -e "${YELLOW}=========================================${NC}"
echo

# عنوان IP وهمي
PUBLIC_IP="65.20.103.72"
echo -e "${CYAN}>> Public IP Address: ${WHITE}$PUBLIC_IP ${NC}"
echo -e "<<< == == == == == == == >>>"
echo

# قائمة الخيارات
echo -e "${BLUE}[1]${NC} Add Account"
echo -e "${BLUE}[2]${NC} List Account Detail"
echo -e "${BLUE}[3]${NC} Delete Account"
echo -e "${YELLOW}[4]${NC} Edit Account Expiry Date"
echo -e "${CYAN}[5]${NC} Full Backup/Restore Account"
echo -e "${YELLOW}[6]${NC} Edit Account Password"
echo -e "${YELLOW}[7]${NC} Remove Expired Account"
echo -e "${CYAN}[8]${NC} VPS Info"
echo
echo -e "${RED}[9]${NC} Uninstall Guide"
echo -e "${RED}[0]${NC} Exit"
echo

# طلب اختيار المستخدم
read -p "//_> Choose an option: " option

# تنفيذ اختيارات وهمية (للعرض فقط)
case $option in
  1) echo ">> Adding account...";;
  2) echo ">> Listing accounts...";;
  3) echo ">> Deleting account...";;
  4) echo ">> Editing expiry date...";;
  5) echo ">> Backup/Restore...";;
  6) echo ">> Changing password...";;
  7) echo ">> Removing expired accounts...";;
  8) echo ">> VPS info...";;
  9) echo ">> Uninstalling...";;
  0) echo ">> Exiting...";;
  *) echo ">> Invalid option!";;
esac
