#!/bin/bash

# الألوان
RED='\e[91m'
GREEN='\e[92m'
YELLOW='\e[93m'
BLUE='\e[94m'
MAGENTA='\e[95m'
CYAN='\e[96m'
WHITE='\e[97m'
NC='\e[0m'

# تحقق من كلمة السر
clear
echo -e "${YELLOW}🔐 Secure Access Panel${NC}"
read -sp "🔒 Enter password to access: " pass
echo ""
if [[ "$pass" != "HAMZAZIDANE200" ]]; then
  echo -e "${RED}❌ Access Denied! Wrong password.${NC}"
  exit 1
fi

# واجهة الاستقبال
clear
echo -e "${MAGENTA}━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━${NC}"
echo -e "${CYAN}     ⚡ Welcome to ${MAGENTA}ZiVPN MANAGER v1.5${CYAN} ⚡${NC}"
echo -e "${MAGENTA}━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━${NC}"
echo -e "${WHITE}By: ${GREEN}@deviYke${WHITE}, ${GREEN}@Kwadeous${WHITE}, ${GREEN}@voltsshx${NC}"
echo -e "${MAGENTA}━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━${NC}"

# IP ثابت
PUBLIC_IP="65.20.103.72"
echo -e "${YELLOW}🌐 Your Server IP: ${WHITE}$PUBLIC_IP${NC}"
echo -e "${MAGENTA}━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━${NC}"

# القائمة
echo -e "${BLUE} [1] ➕ Add Account${NC}"
echo -e "${BLUE} [2] 📋 List Account Details${NC}"
echo -e "${BLUE} [3] ❌ Delete Account${NC}"
echo -e "${YELLOW} [4] ⏰ Edit Account Expiry Date${NC}"
echo -e "${CYAN} [5] 💾 Full Backup/Restore Account${NC}"
echo -e "${YELLOW} [6] 🔑 Edit Account Password${NC}"
echo -e "${YELLOW} [7] 🗑️ Remove Expired Account${NC}"
echo -e "${CYAN} [8] 🖥️ VPS Info${NC}"
echo -e "${MAGENTA}━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━${NC}"
echo -e "${RED} [9] ❓ Uninstall Guide${NC}"
echo -e "${RED} [0] 🚪 Exit${NC}"
echo -e "${MAGENTA}━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━${NC}"

# اختيار المستخدم
read -p "👉 Choose an option: " option

# رد حسب الاختيار
case $option in
  1) echo -e "${GREEN}➕ Adding account...${NC}";;
  2) echo -e "${CYAN}📋 Listing accounts...${NC}";;
  3) echo -e "${RED}❌ Deleting account...${NC}";;
  4) echo -e "${YELLOW}⏰ Editing expiry date...${NC}";;
  5) echo -e "${BLUE}💾 Backup/Restore...${NC}";;
  6) echo -e "${YELLOW}🔑 Changing password...${NC}";;
  7) echo -e "${RED}🗑️ Removing expired accounts...${NC}";;
  8) echo -e "${CYAN}🖥️ Displaying VPS info...${NC}";;
  9) echo -e "${RED}❓ Showing uninstall guide...${NC}";;
  0) echo -e "${MAGENTA}🚪 Exiting...${NC}";;
  *) echo -e "${RED}❗ Invalid option!${NC}";;
esac
