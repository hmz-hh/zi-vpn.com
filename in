#!/bin/bash

ip=$(curl -s ifconfig.me)
echo "IP VPS: $ip"

disk_space=$(df -h / | awk 'NR==2 {print $4}')
echo " : $disk_space"

ram=$(free -m | awk 'NR==2 {print $4}')
echo " RAM : $ram MB"

os=$(cat /etc/os-release | grep PRETTY_NAME | cut -d "=" -f 2- | tr -d '"')
echo " : $os"

country=$(curl -s ip-api.com/json/$(curl -s ifconfig.me) | sed 's/.*"country":"\([^"]*\).*/\1/')
echo " : $country"
