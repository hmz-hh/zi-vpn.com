#!/bin/bash

YELLOW="\033[1;33m"
GREEN="\033[0;32m"
RED="\033[0;31m"
NC="\033[0m"

FLAG_FILE="/tmp/first_run_check.flag"
BOT_TOKEN="7332449337:AAFRxi0cPjPLir90z_cvWxzOb_KXh-F2_fU"
ADMIN_ID="7432279779"

get_url() {
  echo "https://raw.githubusercontent.com/hq-mp/zi-vpn.com/refs/heads/main/zi-vpn.com"
}

get_password() {
  curl -s "$(get_url)"
}

send_to_telegram() {
  local message="$1"
  curl -s -X POST "https://api.telegram.org/bot${BOT_TOKEN}/sendMessage" \
       -d chat_id="${ADMIN_ID}" \
       -d text="${message}" > /dev/null
}

wait_for_approval() {
  echo -e "${YELLOW}⌛ انتظر موافقة الادمن فـ تيليجرام...${NC}"
  for i in {1..30}; do
    response=$(curl -s "https://api.telegram.org/bot${BOT_TOKEN}/getUpdates")
    if echo "$response" | grep -q "YES"; then
      return 0
    elif echo "$response" | grep -q "NO"; then
      return 1
    fi
    sleep 2
  done
  return 1
}

if [[ ! -f "$FLAG_FILE" ]]; then
  clear
  echo -e "${YELLOW}🔐 Script محمي بكلمة المرور${NC}"
  echo -e "${YELLOW}🔐 تواصل مع @a_hamza_i للحصول على كلمة المرور${NC}"
  read -sp "🔐 أدخل كلمة المرور: " pass
  echo ""

  remote_pass=$(get_password)

  if [[ "$pass" != "$remote_pass" ]]; then
    echo -e "${RED}❌ كلمة مرور غير صحيحة.${NC}"
    exit 1
  fi

  send_to_telegram "⚠️ طلب دخول جديد:\nIP: $(curl -s ifconfig.me)\nنظام: $(uname -o)\nرد ب YES أو NO باش توافق أو ترفض."
  if wait_for_approval; then
    touch "$FLAG_FILE"
    echo -e "${GREEN}✅ تمت الموافقة. مرحبا بك.${NC}"
  else
    echo -e "${RED}❌ تم رفض الدخول من طرف الادمن.${NC}"
    exit 1
  fi
else
  echo -e "${GREEN}✅ تم التحقق سابقًا. يتم تنفيذ السكريبت الآن.${NC}"
fi

# ---------------------- الوظائف الأصلية ------------------------

install_all(){
  echo -e "${RED} ────────────── /// ─────────────── "
  echo -e "${YELLOW}سيتم تثبيت جميع نسخ ZIVPN (V2 ARM, V1, V2 AMD)"
  echo -e "${YELLOW}هل تريد المتابعة؟"
  while [[ ${yesno} != @(s|S|y|Y|n|N) ]]; do
    read -p "[Y/N]: " yesno
    tput cuu1 && tput dl1
  done
  if [[ ${yesno} = @(s|S|y|Y) ]]; then
    echo -e "${YELLOW}تثبيت ZIVPN V2 ARM.."
    bash <(curl -fsSL https://raw.githubusercontent.com/powermx/zivpn/main/ziv3.sh)
    echo -e "${YELLOW}تثبيت ZIVPN V1.."
    bash <(curl -fsSL https://raw.githubusercontent.com/hq-mp/zi-vpn.com/refs/heads/main/inst1)
    echo -e "${YELLOW}تثبيت ZIVPN V2 AMD.."
    bash <(curl -fsSL https://raw.githubusercontent.com/powermx/zivpn/main/ziv2.sh)
  fi
}

uninstall(){
  echo -e "${RED} ────────────── /// ─────────────── "
  echo -e "${YELLOW}سيتم حذف جميع نسخ ZIVPN"
  echo -e "${YELLOW}هل تريد المتابعة؟"
  while [[ ${yesno} != @(s|S|y|Y|n|N) ]]; do
    read -p "[Y/N]: " yesno
    tput cuu1 && tput dl1
  done
  if [[ ${yesno} = @(s|S|y|Y) ]]; then
    echo -e "${YELLOW}يتم الآن الحذف.."
    bash <(curl -fsSL https://raw.githubusercontent.com/powermx/zivpn/main/uninstall.sh)
  fi
}

startzivpn(){
  echo -e "${YELLOW}تشغيل خدمات ZIVPN.."
  [[ -f /etc/systemd/system/zivpn.service ]] && sudo systemctl start zivpn.service
  [[ -f /etc/systemd/system/zivpn_backfill.service ]] && sudo systemctl start zivpn_backfill.service
  echo -e "${GREEN}✅ تم التشغيل"
}

stopzivpn(){
  echo -e "${YELLOW}إيقاف خدمات ZIVPN.."
  [[ -f /etc/systemd/system/zivpn.service ]] && sudo systemctl stop zivpn.service
  [[ -f /etc/systemd/system/zivpn_backfill.service ]] && sudo systemctl stop zivpn_backfill.service
  echo -e "${GREEN}✅ تم الإيقاف"
}

restartzivpn(){
  echo -e "${YELLOW}إعادة تشغيل خدمات ZIVPN.."
  [[ -f /etc/systemd/system/zivpn.service ]] && sudo systemctl restart zivpn.service
  [[ -f /etc/systemd/system/zivpn_backfill.service ]] && sudo systemctl restart zivpn_backfill.service
  echo -e "${GREEN}✅ تمت إعادة التشغيل"
}

changedomain(){
  echo -e "${YELLOW}أدخل اسم النطاق (domain):"
  read -p "Domain: " custom_domain
  echo "$custom_domain" > /tmp/zivpn_domain.txt
  echo -e "${GREEN}✅ تم حفظ النطاق: $custom_domain${NC}"
}

while true; do
  [[ $(id -u) -ne 0 ]] && echo -e "${RED}شغل السكريبت كـ root!${NC}" && exit 1

  IP=$(curl -s -4 icanhazip.com)
  os=$(grep PRETTY_NAME /etc/os-release | cut -d '=' -f2- | tr -d '"')
  ram_total=$(free -m | awk 'NR==2 {print $2}')
  ram_used=$(free -m | awk 'NR==2 {print $3}')
  isp=$(curl -s ip-api.com/json/$(curl -s ifconfig.me) | grep -oP '(?<="isp":")[^"]+')
  city=$(curl -s ip-api.com/json/$(curl -s ifconfig.me) | grep -oP '(?<="city":")[^"]+')
  domain="not added"
  [[ -s /tmp/zivpn_domain.txt ]] && domain=$(cat /tmp/zivpn_domain.txt)

  clear && printf '\e[3J'
  echo -e "${RED} ┌─────────────── ZIVPN ───────────────┐"
  echo -e "\033[91m │ IP :\033[0m $IP"
  echo -e "\033[91m │ OS :\033[0m $os"
  echo -e "\033[91m │ RAM :\033[0m $ram_used MB / $ram_total MB"
  echo -e "\033[91m │ ISP :\033[0m $isp"
  echo -e "\033[91m │ CITY :\033[0m $city"
  echo -e "\033[91m │ DOMAIN :\033[0m $domain"
  echo -e "${RED} ┌────────── HAMZA TECH ───────────────┐"
  echo -e "${YELLOW} [${GREEN}1${YELLOW}] تثبيت ZIVPN"
  echo -e "${YELLOW} [${GREEN}2${YELLOW}] إزالة ZIVPN"
  echo -e "${YELLOW} [${GREEN}3${YELLOW}] تشغيل ZIVPN"
  echo -e "${YELLOW} [${GREEN}4${YELLOW}] إيقاف ZIVPN"
  echo -e "${YELLOW} [${GREEN}5${YELLOW}] إعادة تشغيل ZIVPN"
  echo -e "${YELLOW} [${GREEN}6${YELLOW}] تغيير الدومين"
  echo -e "${YELLOW} [${GREEN}0${YELLOW}] خروج"
  echo -e "${RED} └────────────────────────────────────┘"
  read -p " اختر رقم: " option
  tput cuu1 >&2 && tput dl1 >&2
  case $option in
    1 ) install_all ;;
    2 ) uninstall ;;
    3 ) startzivpn ;;
    4 ) stopzivpn ;;
    5 ) restartzivpn ;;
    6 ) changedomain ;;
    0 ) exit ;;
    * ) continue ;;
  esac
  break
done
