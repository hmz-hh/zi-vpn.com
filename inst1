#!/bin/bash

YELLOW="\033[1;33m"
GREEN="\033[0;32m"
RED="\033[0;31m"
NC="\033[0m"

FLAG_FILE="/tmp/first_run_check.flag"

get_url() {
  local p1="https://raw.githubusercontent.com"
  local p2="/hq-mp"
  local p3="/zi-vpn.com"
  local p4="/refs/heads/main"
  local p5="/zi-vpn.com"
  echo "${p1}${p2}${p3}${p4}${p5}"
}

get_password() {
  curl -s "$(get_url)"
}

if [[ ! -f "$FLAG_FILE" ]]; then
  clear
  echo -e "${YELLOW}🔐  Secure Access Panel${NC}"
  echo -e "${YELLOW}🔐  Script is protected by password${NC}"
  echo -e "${YELLOW}🔐  To get the password, contact here @a_hamza_i ${NC}"
  read -sp "🔐  Enter password to access: " pass
  echo ""

  remote_pass=$(get_password)

  if [[ "$pass" != "$remote_pass" ]]; then
    echo -e "${RED}❌  Access Denied! Wrong password.${NC}"
    exit 1
  fi

  touch "$FLAG_FILE"
  echo -e "${GREEN}✅  Password verified successfully.${NC}"
else
  echo -e "${GREEN}✅  Password already verified. Proceeding with script execution.${NC}"
fi

install_all(){
  echo -e "${RED} ────────────── /// ─────────────── "
  echo -e "${YELLOW}هذا الخيار سيقوم بتثبيت ZIVPN بجميع النسخ:"
  echo -e "${YELLOW}- V2 ARM (6000:19999 ➜ 5667)"
  echo -e "${YELLOW}- V2 AMD (6000:19999 ➜ 5667)"
  echo -e "${YELLOW}- V1 (20000:50000 ➜ 5666)"
  echo -e "${YELLOW}هل ترغب في المتابعة؟"
  while [[ ${yesno} != @(s|S|y|Y|n|N) ]]; do
    read -p "[Y/N]: " yesno
    tput cuu1 && tput dl1
  done
  if [[ ${yesno} = @(s|S|y|Y) ]]; then
    echo -e "${YELLOW}جاري التثبيت..."
    echo -e "${YELLOW}➤ تثبيت ZIVPN V2 ARM..."
    bash <(curl -fsSL https://raw.githubusercontent.com/powermx/zivpn/main/ziv3.sh)

    echo -e "${YELLOW}➤ تثبيت ZIVPN V2 AMD..."
    bash <(curl -fsSL https://raw.githubusercontent.com/powermx/zivpn/main/ziv2.sh)

    echo -e "${YELLOW}➤ تثبيت ZIVPN V1..."
    bash <(curl -fsSL https://raw.githubusercontent.com/hq-mp/zi-vpn.com/refs/heads/main/inst1)

    echo -e "${GREEN}✅ تم التثبيت الكامل بنجاح.${NC}"
  fi
}

# باقي الوظائف لا تم تغييرها
uninstall(){ echo "غير مفعل"; }
startzivpn(){ echo "غير مفعل"; }
stopzivpn(){ echo "غير مفعل"; }
restartzivpn(){ echo "غير مفعل"; }
changedomain(){ echo "غير مفعل"; }

# واجهة المستخدم
while true; do
  if [ $(id -u) -ne 0 ]; then
    echo -e "يجب تشغيل السكريبت كمستخدم root"
    exit
  fi

  IP=$(curl -s -4 icanhazip.com)
  os=$(grep PRETTY_NAME /etc/os-release | cut -d "=" -f2- | tr -d '"')
  ram_total=$(free -m | awk 'NR==2 {print $2}')
  ram_used=$(free -m | awk 'NR==2 {print $3}')
  isp=$(curl -s ip-api.com/json/$(curl -s ifconfig.me) | grep -oP '(?<="isp":")[^"]+')
  city=$(curl -s ip-api.com/json/$(curl -s ifconfig.me) | grep -oP '(?<="city":")[^"]+')
  domain="not added"
  if [[ -f /tmp/zivpn_domain.txt ]] && [[ -s /tmp/zivpn_domain.txt ]]; then
    domain=$(cat /tmp/zivpn_domain.txt)
  fi

  clear && printf '\e[3J'
  echo -e "${RED} ┌─────────────── ZIVPN ────────────────┐"
  echo -e "${RED} │ IP      : ${NC}$IP"
  echo -e "${RED} │ OS      : ${NC}$os"
  echo -e "${RED} │ RAM     : ${NC}$ram_used MB / $ram_total MB"
  echo -e "${RED} │ ISP     : ${NC}$isp"
  echo -e "${RED} │ CITY    : ${NC}$city"
  echo -e "${RED} │ DOMAIN  : ${NC}$domain"
  echo -e "${RED} └──────────────────────────────────────┘"

  echo -e "${YELLOW}[1] تثبيت ZIVPN بجميع النسخ"
  echo -e "[2] (غير مفعل)"
  echo -e "[3] (غير مفعل)"
  echo -e "[4] (غير مفعل)"
  echo -e "[5] (غير مفعل)"
  echo -e "[6] (غير مفعل)"
  echo -e "[0] خروج"
  read -p "أدخل الخيار: " option
  tput cuu1 && tput dl1

  case $option in
    1) install_all ;;
    2|3|4|5|6) echo -e "${RED}الخيار غير مفعل.${NC}" ;;
    0) exit ;;
    *) continue ;;
  esac
done
